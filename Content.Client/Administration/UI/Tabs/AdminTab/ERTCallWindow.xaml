<DefaultWindow xmlns="https://spacestation14.io"
            xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
            Title="{Loc 'admin-player-actions-window-ert'}"
            MinWidth="300">
    <BoxContainer Orientation="Vertical">
        <Control MinSize="0 10" />

        <BoxContainer Orientation="Horizontal">
            <ItemList Name="ExpectedList" MinSize="300 200" />

            <BoxContainer Orientation="Vertical" MinSize="200 200" SeparationOverride="4">
                <Label Text="Установить время прибытия (секунды):" />
                <LineEdit Name="ArrivalSeconds" />
                <Button Name="SetArrivalButton" Text="Изменить" />

                <Control MinSize="0 10" />

                <Label Text="Установить cooldown (секунды):" />
                <LineEdit Name="CooldownSeconds" />
                <Button Name="SetCooldownButton" Text="Изменить" />

                <Control MinSize="0 10" />

                <Label Text="Установить баланс очков вызова:" />
                <LineEdit Name="PointsEdit" />
                <Button Name="SetPointsButton" Text="Изменить" />

                <Control MinSize="0 10" />

                <Button Name="DeleteErtButton" Text="Удалить из списка" />
                <Button Name="RefreshButton" Text="Обновить" />
            </BoxContainer>
        </BoxContainer>

        <Control MinSize="0 10" />
    </BoxContainer>
</DefaultWindow>
